FROM debian:buster-slim

LABEL maintainer="calvintam236"
LABEL description="XMRig in Docker. Supports CPU & GPU mining."

WORKDIR /tmp/

ADD \
https://github.com/xmrig/xmrig/releases/download/v5.8.2/xmrig-5.8.2-xenial-x64.tar.gz \
.

RUN \
apt-get update \
&& apt-get -y --no-install-recommends install mesa-opencl-icd ocl-icd-opencl-dev \
&& rm -rf /var/lib/apt/lists/* \
&& tar -xvf xmrig-5.8.2-xenial-x64.tar.gz \
&& mv xmrig-5.8.2/xmrig /usr/local/bin/ \
&& chmod +x /usr/local/bin/xmrig \
&& rm -r *

ENTRYPOINT ["xmrig"]
CMD ["-h"]
